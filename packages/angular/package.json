    "@angular/forms": "~12.0.2",
    "@angular/platform-browser": "~12.0.2",
    "@angular/platform-browser-dynamic": "~12.0.2",
    "@angular/router": "~12.0.2",
    "@cds/angular": "file:./dist/angular",
    "@cds/core": "file:./../core/dist/core",
    "@types/jasmine": "~3.6.0",
    "jasmine-core": "~3.10.0",
    "jasmine-expect": "^5.0.0",
    "karma": "~6.3.4",
