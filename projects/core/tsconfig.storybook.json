{
  "include": ["./**/*.stories.ts", "./**/*.story.ts", "./docs/**/*", "./**/*.d.ts", "./dist"],
  "exclude": [
    "node_modules",
    "./**/test/*.ts",
    "./**/*.spec.ts",
    "./**/*.a11y.ts",
    "./**/*.performance.ts",
    "./build/**/*.ts"
  ],
  "compilerOptions": {
    "rootDir": "./",
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "useDefineForClassFields": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": false,
    "sourceMap": false,
    "inlineSourceMap": false,
    "importHelpers": true,
    "paths": {
      "@cds/core": ["./dist/core"],
      "@cds/core/*": ["./dist/core/*"],
      "@cds/core/*/register": ["./dist/core/*/register"]
    }
  }
}
