{
  "name": "react-ws",
  "private": true,
  "scripts": {
    "build": "npm-run-all _build:ts _build:package",
    "build:watch": "tsc --b ./tsconfig.project.json --watch",
    "clean": "rimraf ./dist",
    "start": "npm-run-all build --parallel build:watch _dev:start",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "test:snap:update": "npm run build && jest --updateSnapshot",
    "_build:package": "cpy package.lib.json ./dist/react --rename package.json && cpy README.md ./dist/react && cpy \"./**/package.json\" ./../dist/react --cwd=./src --parents && del-cli ./dist/**/*.tsbuildinfo",
    "_build:ts": "tsc --build ./tsconfig.project.json --force",
    "_dev:start": "parcel index.html"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/preset-env": "7.10.2",
    "@cds/core": "file:./../core/dist/core",
    "@lit-labs/react": "^1.0.1",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^14.0.5",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "babel-jest": "^27.4.6",
    "jest": "^27.4.7",
    "lit": "2.0.2",
    "parcel": "^2.0.0-beta.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "replace": "1.1.0",
    "ts-jest": "^27.1.3",
    "typescript": "~4.4.4"
  }
}
